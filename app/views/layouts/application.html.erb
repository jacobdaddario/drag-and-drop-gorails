<!DOCTYPE html>
<html>
  <head>
    <title>DragAndDropGorails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <div class="border-b border-blue-700 bg-blue-100 py-4 px-8">
        <p class="text-blue-700"><%= notice %></p>
      </div>
    <% end %>

    <div class="p-8 w-full">
      <%= yield %>
    </div>
  </body>
</html>
